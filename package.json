{
  "name": "mindbase",
  "version": "1.0.0",
  "description": "AI Conversation Knowledge Management - Local-First, Privacy-Focused",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @mindbase/settings dev",
    "dev:api": "cd apps/api && uvicorn app.main:app --reload --host 0.0.0.0 --port 18002",
    "dev:mcp": "pnpm --filter @mindbase/mcp-server dev",
    "build": "pnpm -r build",
    "extract": "tsx libs/processors/extract-modules.ts",
    "generate": "tsx libs/generators/generate-article.ts",
    "publish": "tsx libs/generators/publish-qiita.ts",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "keywords": [
    "claude-code",
    "mindbase",
    "blog-automation",
    "conversation-archive",
    "qiita",
    "zenn"
  ],
  "author": "kazuki",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
