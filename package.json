{
  "name": "mindbase",
  "version": "1.0.0",
  "description": "AI Conversation Knowledge Management - Archive, Extract, Generate, Publish",
  "type": "module",
  "scripts": {
    "archive": "bash scripts/archive/archive-conversations.sh",
    "optimize": "bash scripts/optimize-dotclaude/optimize.sh",
    "extract": "tsx src/processors/extract-modules.ts",
    "generate": "tsx src/generators/generate-article.ts",
    "publish": "tsx src/generators/publish-qiita.ts",
    "mcp:dev": "tsx src/mcp-server/index.ts",
    "mcp:build": "tsc -p tsconfig.mcp.json",
    "mcp:start": "node dist/mcp-server/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'TypeScript linting not configured yet'",
    "test": "echo 'TypeScript tests not configured yet'",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "claude-code",
    "mindbase",
    "blog-automation",
    "conversation-archive",
    "qiita",
    "zenn"
  ],
  "author": "kazuki",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
