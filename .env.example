# MindBase Environment Variables (Development)
# Docker開発環境用 - 本番(brew install)とポート分離

# PostgreSQL
POSTGRES_USER=mindbase
POSTGRES_PASSWORD=mindbase_dev
POSTGRES_DB=mindbase_dev  # 開発DB
POSTGRES_PORT=15434  # 開発用ポート (本番15433と分離)

# Ollama
OLLAMA_PORT=11434
EMBEDDING_MODEL=qwen3-embedding:8b
EMBEDDING_DIMENSIONS=1024

# FastAPI
API_PORT=18003  # 開発用ポート (本番18002と分離)
DEBUG=true

# Database URL (for FastAPI)
DATABASE_URL=postgresql+asyncpg://mindbase:mindbase_dev@postgres:5432/mindbase_dev

# Ollama URL (for FastAPI)
OLLAMA_URL=http://host.docker.internal:11434  # ホストのbrew Ollama使用
